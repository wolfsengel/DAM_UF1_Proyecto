<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recommendationsFragment">

    <fragment
        android:id="@+id/recommendationsFragment"
        android:name="com.example.uf1_proyecto.Activity.RecommendationsFragment"
        android:label="RecommendationsFragment" >
        <action
            android:id="@+id/action_recommendationsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_recommendationsFragment_to_catalogFragment"
            app:destination="@id/catalogFragment" />
        <action
            android:id="@+id/action_recommendationsFragment_to_searchResultsFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.uf1_proyecto.Activity.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_recommendationsFragment"
            app:destination="@id/recommendationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.example.uf1_proyecto.Activity.CatalogFragment"
        android:label="CatalogFragment" >
        <action
            android:id="@+id/action_catalogFragment_to_recommendationsFragment"
            app:destination="@id/recommendationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.uf1_proyecto.Activity.SearchResultsFragment"
        android:label="fragment_search_results"
        tools:layout="@layout/fragment_search_results" >
        <argument
            android:name="search"
            app:argType="integer" />
    </fragment>

</navigation>
